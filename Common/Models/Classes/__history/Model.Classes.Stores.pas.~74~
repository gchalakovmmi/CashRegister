procedure AssignDataSetModelClassStores(const ADataSet: TFDDataSet);
begin
  TModelClassStores.AssignDataSet(ADataSet);
end;

procedure AssignFileNameModelClassStores(const AFileName: String);
begin
  TModelClassStores.FileName := AFileName;
end;

function CreateModelClassStores: IModelClassStores;
begin
  Result := TModelClassStores.Create;
end;

function CreateFromJSONModelClassStores(const AJSONArray: TJSONArray): IModelClassStores;
begin
  Result := TModelClassStores.CreateFromJSON(AJSONArray);
end;

function CreateFromFileModelClassStores: IModelClassStores;
begin
  Result := TModelClassStores.CreateFromFile;
end;

function CreateFromFileModelClassStores(const AFileName: String): IModelClassStores;
begin
  Result := TModelClassStores.CreateFromFile(AFileName);
end;

