procedure TViewOperationPayments.FormCreate(Sender: TObject);
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

//  FViewModel := CreateViewModelOperationPayments;
//  FViewModel.Observable.Subscribe(FObserver);

  UpdateGUI;
end;

procedure TViewOperationPayments.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action := caFree;
end;

procedure TViewOperationPayments.FormResize(Sender: TObject);
begin
  UpdateGUI;
end;

