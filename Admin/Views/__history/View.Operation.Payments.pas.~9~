procedure TViewOperationPayments.RefreshData;
var
  LList: TStringDynArray;
  I: Integer;
  LSale: IModelClassSale;
  LPayment: IModelClassSalePayment;

  procedure AppendFromModel;
  begin
//    if FDMemTablePaymentVAT.AsString = '0.00' then exit;
    FDMemTable.Append;
    FDMemTableSaleUniqueID.AsString := LPayment.SaleUniqueID;
    FDMemTableSaleGID.AsString := LPayment.ParentGID;
    FDMemTableCreatedDate.AsString := LPayment.CreatedDate;
    FDMemTableUserGID.AsString := LPayment.UserID;
    if LPayment.UserID = '6' then begin
      FDMemTableUserName.AsString := 'ÊÐÀÑÈÌÈÐÀ ßÍ×ÅÂÀ';
    end else begin
      if LPayment.UserID = '8' then begin
        FDMemTableUserName.AsString := 'ÏÅÍÊÀ ÆÅÊÎÂÀ';
      end else begin
        FDMemTableUserName.AsString := 'ÈÂÀÍÊÀ ÌÈÍÊÎÂÀ';
      end;
    end;
    FDMemTableCompletedDate.AsString := LPayment.CompletedDate;
    FDMemTableDue.AsString := LPayment.Due;
    FDMemTablePaymentDate.AsString := LPayment.PaymentDate;
    FDMemTablePaymentBase.AsString := LPayment.PaymentBase;
    FDMemTablePaymentVAT.AsString := LPayment.PaymentVAT;
    if LPayment.PaymentType = 'cash' then FDMemTablePaymentType.AsString := 'Â ÁÐÎÉ';
    if LPayment.PaymentType = 'voucher' then FDMemTablePaymentType.AsString := 'ÂÀÓ×ÅÐ';
    if LPayment.PaymentType = 'card' then FDMemTablePaymentType.AsString := 'ÊÀÐÒÀ';
//    if LPayment.PaymentType = 'cash' then FDMemTablePaymentType.AsString := 'Â ÁÐÎÉ';


    FDMemTableFiscalDeviceID.AsString := LPayment.FiscalDeviceID;
    FDMemTable.Post;
  end;

begin
  { Populate the memo with the results }
  FDMemTable.Close;
  FDMemTable.IndexFieldNames := '';
  FDMemTable.CreateDataSet;

  LList := TDirectory.GetFiles('.\ïðîäàæáè\2019\12\18\1', 'Sale*.json', TSearchOption.soTopDirectoryOnly);

  for I := 0 to Length(LList) - 1 do begin
    LSale := CreateFromFileModelClassSale(LList[i]);
    for LPayment in LSale.Payments.List do begin
      AppendFromModel;
    end;
  end;

  LList := TDirectory.GetFiles('.\ïðîäàæáè\2019\12\18\2', 'Sale*.json', TSearchOption.soTopDirectoryOnly);

  for I := 0 to Length(LList) - 1 do begin
    LSale := CreateFromFileModelClassSale(LList[i]);
    for LPayment in LSale.Payments.List do begin
      AppendFromModel;
    end;
  end;
end;

