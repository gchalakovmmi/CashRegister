procedure TViewOperationDetails.RefreshData;
var
  LList: TStringDynArray;
  I: Integer;
  LSale: IModelClassSale;
  LDetail: IModelClassSaleDetail;

  procedure AppendFromModel;
  begin
    FDMemTable.Append;
    FDMemTableDetailUniqueID.AsString := LSale.SaleUniqueID;
    FDMemTableTotalVAT.AsString := LDetail.TotalVAT;
    FDMemTableDetailGID.AsString := LDetail.GID;
    FDMemTableItemGID.AsString := LDetail.ItemGID;
    FDMemTableItemName.AsString := LDetail.ItemName;
    FDMemTableQuantity.AsString := LDetail.Quantity;
    FDMemTableClientBasePrice.AsString := LDetail.ClientPriceBase;
    FDMemTableDiscountValue.AsString := LDetail.DiscountValue;
    FDMemTableVATRate.AsString := LDetail.VATRate;
    FDMemTableTotal.AsString := LDetail.Total;
    FDMemTable.Post;
  end;

begin
  { Populate the memo with the results }
  FDMemTable.Close;
  FDMemTable.IndexFieldNames := '';
  FDMemTable.CreateDataSet;

  LList := TDirectory.GetFiles('.\продажби\2019\12\18\1', 'Sale*.json', TSearchOption.soTopDirectoryOnly);

  for I := 0 to Length(LList) - 1 do begin
    LSale := CreateFromFileModelClassSale(LList[i]);
    for LDetail in LSale.Details.List do
    begin

    end;
    AppendFromModel;
  end;

  LList := TDirectory.GetFiles('.\продажби\2019\12\18\2', 'Sale*.json', TSearchOption.soTopDirectoryOnly);

  for I := 0 to Length(LList) - 1 do begin
    LSale := CreateFromFileModelClassSale(LList[i]);
    AppendFromModel;
  end;
end;

