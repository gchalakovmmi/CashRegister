procedure TViewOperationDetails.FormCreate(Sender: TObject);
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

//  FViewModel := CreateViewModelOperationDetails;
//  FViewModel.Observable.Subscribe(FObserver);

  UpdateGUI;
end;

procedure TViewOperationDetails.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action := caFree;
end;

procedure TViewOperationDetails.FormResize(Sender: TObject);
begin
  UpdateGUI;
end;

{$ENDREGION}


{$REGION 'Private Methods'}

procedure TViewOperationDetails.ProcessNotification(const AModelNotification: IModelNotification);
begin
  if actUpdateGUI in AModelNotification.Actions then begin
    UpdateGUI;
  end;
  if actCloseForm in AModelNotification.Actions then begin
    Close;
  end;
end;

