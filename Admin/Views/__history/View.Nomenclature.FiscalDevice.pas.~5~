unit View.Nomenclature.FiscalDevice;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms,
  Vcl.Dialogs,
  Vcl.StdCtrls,
  Vcl.ExtCtrls,
  Vcl.Grids,
  Vcl.DBGrids,
  Vcl.Mask,
  Vcl.DBCtrls,
  Data.DB,
  Interfaces.Enums,
  Interfaces.Model.Pattern.Observer,
  Interfaces.Model.Notification,
  Interfaces.ViewModel.Nomenclature.FiscalDevice;

type
  TViewNomenclatureFiscalDevice = class(TForm)
    LabelBrand: TLabel;
      DBEditBrand: TDBEdit;
    LabelModel: TLabel;
      DBEditModel: TDBEdit;
    LabelSerialNumber: TLabel;
      DBEditSerialNumber: TDBEdit;

    Panel: TPanel;
      ButtonConfirm: TButton;
      ButtonCancel: TButton;

  {$REGION 'Published Methods'}
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure ButtonCancelClick(Sender: TObject);
    procedure ButtonConfirmClick(Sender: TObject);
  {$ENDREGION}

  {$REGION 'Private Methods'}
  private
    procedure ProcessNotification(const AModelNotification: IModelNotification);
    procedure UpdateGUI;
  {$ENDREGION}

  {$REGION 'Private Fields'}
  private
    FObserver: IObserver;
    FViewModel: IViewModelNomenclatureFiscalDevice;
  {$ENDREGION}

  {$REGION 'Private Properties Getters/Setters'}
  private

  {$ENDREGION}

  {$REGION 'Private Properties'}
  private
    property Observer: IObserver read FObserver;
    property ViewModel: IViewModelNomenclatureFiscalDevice read FViewModel;
  {$ENDREGION}

  {$REGION 'Interfaced Properties Getters/Setters'}
  public

  {$ENDREGION}

  {$REGION 'Interfaced Properties'}
  public

  {$ENDREGION}

  {$REGION 'Interfaced Methods'}
  public

  {$ENDREGION}
  end;

  procedure ShowViewNomenclatureFiscalDevice(const AAction: TAMDAction);

implementation

{$R *.dfm}

uses
  Interfaces.GUIRecords,

  Model.Pattern.Observer.Observer,
  ViewModel.Nomenclature.FiscalDevice,
  DataModule.FiscalDevices;

{$REGION 'Published Methods'}

procedure TViewNomenclatureFiscalDevice.FormCreate(Sender: TObject);
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

  FViewModel := CreateViewModelNomenclatureFiscalDevice;
  FViewModel.Observable.Subscribe(FObserver);

  UpdateGUI;
end;

procedure TViewNomenclatureFiscalDevice.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action := caFree;
end;

procedure TViewNomenclatureFiscalDevice.ButtonConfirmClick(Sender: TObject);
begin
  ViewModel.Confirm;
end;

procedure TViewNomenclatureFiscalDevice.ButtonCancelClick(Sender: TObject);
begin
  ViewModel.Cancel;
end;

{$ENDREGION}


{$REGION 'Private Methods'}

procedure TViewNomenclatureFiscalDevice.ProcessNotification(const AModelNotification: IModelNotification);
begin
  if actUpdateGUI in AModelNotification.Actions then begin
    UpdateGUI;
  end;
  if actCloseForm in AModelNotification.Actions then begin
    Close;
  end;
end;

procedure TViewNomenclatureFiscalDevice.UpdateGUI;
//var
//  LGUIRecord: TViewNomenclatureFiscalDeviceGUIRecord;
begin
//  LGUIRecord := ViewModel.GetGUIRecord;
  ActiveControl := DBEditName;
end;

{$ENDREGION}


{$REGION 'Private Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Methods'}

{$ENDREGION}


{$REGION 'Constructors/Destructors'}

{$ENDREGION}


procedure ShowViewNomenclatureFiscalDevice(const AAction: TAMDAction);
var
  LViewNomenclatureFiscalDevice: TViewNomenclatureFiscalDevice;
begin
  LViewNomenclatureFiscalDevice := TViewNomenclatureFiscalDevice.Create(Application.MainForm);
  LViewNomenclatureFiscalDevice.ViewModel.SetAction(AAction);
  case AAction of
    amdAttach: begin
      if LViewNomenclatureFiscalDevice.ViewModel.Can(amdAttach) then begin
        LViewNomenclatureFiscalDevice.Show;
      end else begin
        LViewNomenclatureFiscalDevice.Close;
      end;
    end;
    amdModify: begin
      if LViewNomenclatureFiscalDevice.ViewModel.Can(amdModify) then begin
        LViewNomenclatureFiscalDevice.Show;
      end else begin
        LViewNomenclatureFiscalDevice.Close;
      end;
    end;
    amdDetach: begin
      if LViewNomenclatureFiscalDevice.ViewModel.Can(amdDetach) then begin
        LViewNomenclatureFiscalDevice.ViewModel.Confirm;
      end else begin
        LViewNomenclatureFiscalDevice.Close;
      end;
    end;
  end;
end;

end.

