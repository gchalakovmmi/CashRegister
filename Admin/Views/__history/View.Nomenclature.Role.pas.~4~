unit View.Nomenclature.Role;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms,
  Vcl.Dialogs,
  Vcl.StdCtrls,
  Vcl.ExtCtrls,
  Vcl.Grids,
  Vcl.DBGrids,
  Vcl.Mask,
  Vcl.DBCtrls,
  Data.DB,
  Interfaces.Enums,
  Interfaces.Model.Pattern.Observer,
  Interfaces.Model.Notification,
  Interfaces.ViewModel.Nomenclature.Role;

type
  TViewNomenclatureRole = class(TForm)
    LabelName: TLabel;
    Panel: TPanel;
    ButtonConfirm: TButton;
    ButtonCancel: TButton;
    DBEditName: TDBEdit;

  {$REGION 'Published Methods'}
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Role: TCloseAction);
    procedure ButtonCancelClick(Sender: TObject);
    procedure ButtonConfirmClick(Sender: TObject);
  {$ENDREGION}

  {$REGION 'Private Methods'}
  private
    procedure ProcessNotification(const AModelNotification: IModelNotification);
    procedure UpdateGUI;
  {$ENDREGION}

  {$REGION 'Private Fields'}
  private
    FObserver: IObserver;
    FViewModel: IViewModelNomenclatureRole;
  {$ENDREGION}

  {$REGION 'Private Properties Getters/Setters'}
  private

  {$ENDREGION}

  {$REGION 'Private Properties'}
  private
    property Observer: IObserver read FObserver;
    property ViewModel: IViewModelNomenclatureRole read FViewModel;
  {$ENDREGION}

  {$REGION 'Interfaced Properties Getters/Setters'}
  public

  {$ENDREGION}

  {$REGION 'Interfaced Properties'}
  public

  {$ENDREGION}

  {$REGION 'Interfaced Methods'}
  public

  {$ENDREGION}
  end;

  procedure ShowViewNomenclatureRole(const AAction: TAMDAction);

implementation

{$R *.dfm}

uses
  Interfaces.GUIRecords,

  Model.Pattern.Observer.Observer,
  ViewModel.Nomenclature.Role,
  DataModule.Roles;

{$REGION 'Published Methods'}

procedure TViewNomenclatureRole.FormCreate(Sender: TObject);
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

  FViewModel := CreateViewModelNomenclatureRole;
  FViewModel.Observable.Subscribe(FObserver);

  UpdateGUI;
end;

procedure TViewNomenclatureRole.FormClose(Sender: TObject; var Role: TCloseAction);
begin
  Role := caFree;
end;

procedure TViewNomenclatureRole.ButtonConfirmClick(Sender: TObject);
begin
  ViewModel.Confirm;
end;

procedure TViewNomenclatureRole.ButtonCancelClick(Sender: TObject);
begin
  ViewModel.Cancel;
end;

{$ENDREGION}


{$REGION 'Private Methods'}

procedure TViewNomenclatureRole.ProcessNotification(const AModelNotification: IModelNotification);
begin
  if actUpdateGUI in AModelNotification.Actions then begin
    UpdateGUI;
  end;
  if actCloseForm in AModelNotification.Actions then begin
    Close;
  end;
end;

procedure TViewNomenclatureRole.UpdateGUI;
var
  LGUIRecord: TViewNomenclatureRoleGUIRecord;
begin
  LGUIRecord := ViewModel.GetGUIRecord;

  Caption := LGUIRecord.Caption;

  ActiveControl := DBEditName;
end;

{$ENDREGION}


{$REGION 'Private Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Methods'}

{$ENDREGION}


{$REGION 'Constructors/Destructors'}

{$ENDREGION}


procedure ShowViewNomenclatureRole(const AAction: TAMDAction);
var
  LViewNomenclatureRole: TViewNomenclatureRole;
begin
  LViewNomenclatureRole := TViewNomenclatureRole.Create(Application.MainForm);
  LViewNomenclatureRole.ViewModel.SetAction(AAction);
  LViewNomenclatureRole.UpdateGUI;
  case AAction of
    amdAttach: begin
      if LViewNomenclatureRole.ViewModel.Can(amdAttach) then begin
        LViewNomenclatureRole.Show;
      end else begin
        LViewNomenclatureRole.Close;
      end;
    end;
    amdModify: begin
      if LViewNomenclatureRole.ViewModel.Can(amdModify) then begin
        LViewNomenclatureRole.Show;
      end else begin
        LViewNomenclatureRole.Close;
      end;
    end;
    amdDetach: begin
      if LViewNomenclatureRole.ViewModel.Can(amdDetach) then begin
        LViewNomenclatureRole.ViewModel.Confirm;
      end else begin
        LViewNomenclatureRole.Close;
      end;
    end;
  end;
end;

end.

