procedure TViewOperationSales.RefreshData;
var
  LList: TStringDynArray;
  I: Integer;
  LSale: IModelClassSale;

  procedure AppendFromModel;
  begin
    FDMemTable.Append;
    FDMemTableStoreName.AsString := LSale.StoreName;
//    DataModuleWorkstations.FDMemTable.Locate('GID', LSale.WorkstationID, []);
//    FDMemTableWorkstationName.AsString := DataModuleWorkstations.FDMemTableName.AsString;
    if LSale.WorkstationID = '1' then begin
      FDMemTableWorkstationName.AsString := 'ÊÀÑÀ 1';
    end else begin
      FDMemTableWorkstationName.AsString := 'ÊÀÑÀ 2';
    end;

//    DataModuleFiscalDevices.FDMemTable.Locate('GID', LSale.FiscalDeviceID, []);
    if LSale.FiscalDeviceID = 'DT652066' then begin
      FDMemTableFiscalDeviceGID.AsString := '1';
      FDMemTableFiscalDeviceName.AsString := LSale.FiscalDeviceID;
    end else begin
      FDMemTableFiscalDeviceGID.AsString := '2';
      FDMemTableFiscalDeviceName.AsString := LSale.FiscalDeviceID;
    end;

//    DataModuleUsers.FDMemTable.Locate('GID', LSale.UserGID, []);
//    FDMemTableUserName.AsString := DataModuleUsers.FDMemTableName.AsString;
    if LSale.UserGID = '6' then begin
      FDMemTableUserName.AsString := 'ÊÐÀÑÈÌÈÐÀ ßÍ×ÅÂÀ';
    end else begin
      FDMemTableUserName.AsString := 'ÈÂÀÍÊÀ ÌÈÍÊÎÂÀ';
    end;
    FDMemTableClientName.AsString := LSale.ClientName;
    FDMemTableSaleUniqueID.AsString := LSale.SaleUniqueID;
    FDMemTableCreatedDate.AsString := LSale.CreatedDate;
    FDMemTableCreatedTime.AsString := LSale.CreatedTime;
    FDMemTableCompletedDate.AsString := LSale.CompletedDate;
    FDMemTableCompletedTime.AsString := LSale.CompletedTime;
    FDMemTableTotalBase.AsString := LSale.TotalBase;
    FDMemTableTotalVAT.AsString := LSale.TotalVAT;
    FDMemTableDiscount.AsString := LSale.Discount;
    FDMemTableDue.AsString := LSale.Due;
    FDMemTableSaleGID.AsString := LSale.GID;
    FDMemTableStoreGID.AsString := LSale.StoreID;
    FDMemTableWorkstationGID.AsString := LSale.WorkstationID;
    FDMemTableUserGID.AsString := LSale.UserGID;
    FDMemTableClientGID.AsString := LSale.ClientGID;
    FDMemTableInvoiceID.AsString := LSale.InvoiceID;
    FDMemTableInvoiceDate.AsString := LSale.InvoiceDate;

    FDMemTable.Post;
  end;

begin
  { Populate the memo with the results }
  FDMemTable.Close;
  FDMemTable.IndexFieldNames := '';
  FDMemTable.CreateDataSet;

  LList := TDirectory.GetFiles('.\ïðîäàæáè\2019\12\18\1', 'Sale*.json', TSearchOption.soTopDirectoryOnly);

  for I := 0 to Length(LList) - 1 do begin
    LSale := CreateFromFileModelClassSale(LList[i]);
    AppendFromModel;
  end;

  LList := TDirectory.GetFiles('.\ïðîäàæáè\2019\12\18\2', 'Sale*.json', TSearchOption.soTopDirectoryOnly);

  for I := 0 to Length(LList) - 1 do begin
    LSale := CreateFromFileModelClassSale(LList[i]);
    AppendFromModel;
  end;
end;

procedure TViewOperationSales.ApplyFilter;
begin
  FDMemTable.First;
  while not FDMemTable.Eof do begin
    if
//      ((DatePickerFrom.Date > FDMemTableCreatedDate.AsDateTime) or (DatePickerTo.Date < FDMemTableCreatedDate.AsDateTime)) or
      ((ComboBoxStore.ItemIndex > 0) and (ComboBoxStore.Items[ComboBoxStore.ItemIndex] <> FDMemTableStoreName.AsString)) or
      ((ComboBoxWorkstation.ItemIndex > 0) and (ComboBoxWorkstation.Items[ComboBoxWorkstation.ItemIndex] <> FDMemTableWorkstationName.AsString)) or
      ((ComboBoxUser.ItemIndex > 0) and (ComboBoxUser.Items[ComboBoxUser.ItemIndex] <> FDMemTableUserName.AsString)) or
      ((ComboBoxFiscalDevice.ItemIndex > 0) and (ComboBoxFiscalDevice.Items[ComboBoxFiscalDevice.ItemIndex] <> FDMemTableFiscalDeviceName.AsString))
    then begin
      FDMemTable.Delete;
    end else begin
      FDMemTable.Next;
    end;
  end;
  FDMemTable.First;
  FDMemTable.IndexFieldNames := 'CreatedTime';
end;

