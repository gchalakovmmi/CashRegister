procedure TViewOperationSales.FormCreate(Sender: TObject);
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

//  FViewModel := CreateViewModelOperationSales;
//  FViewModel.Observable.Subscribe(FObserver);

  UpdateGUI;
end;

procedure TViewOperationSales.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Action := caFree;
end;

procedure TViewOperationSales.FormResize(Sender: TObject);
begin
  UpdateGUI;
end;

