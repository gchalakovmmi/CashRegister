unit ViewModel.Nomenclature.Workstation;

interface

uses
  Interfaces.ViewModel.Nomenclature.Workstation;

  function CreateViewModelNomenclatureWorkstation: IViewModelNomenclatureWorkstation;

implementation

uses
  System.UITypes,
  System.SysUtils,
  Vcl.Dialogs,
  Vcl.ExtCtrls,
  Globals,
  Interfaces.Enums,
  Interfaces.GUIRecords,
  Interfaces.Model.Notification,
  Interfaces.Model.Pattern.Observer,
  Model.Pattern.Observer.Observable,
  Model.Pattern.Observer.Observer,
  Model.Notification,
  Model.Generator.GIDs,

  DataModule.Workstations;

type
  TViewModelNomenclatureWorkstation = class(TInterfacedObject, IViewModelNomenclatureWorkstation)

  {$REGION 'Private Methods'}
  private
    procedure ProcessNotification(const AModelNotification: IModelNotification);
    procedure SendNotification(const AInterfaceActions: TInterfaceActions);
  {$ENDREGION}

  {$REGION 'Private Fields'}
  private
    FObserver: IObserver;
    FObservable: IObservable;
    FAction: TAMDAction;
  {$ENDREGION}

  {$REGION 'Private Properties Getters/Setters'}
  private

  {$ENDREGION}

  {$REGION 'Private Properties'}
  private

  {$ENDREGION}

  {$REGION 'Interfaced Properties Getters/Setters'}
  public
    function GetObserver: IObserver;
    function GetObservable: IObservable;
  {$ENDREGION}

  {$REGION 'Interfaced Properties'}
  public
    property Observer: IObserver read FObserver;
    property Observable: IObservable read GetObservable;
  {$ENDREGION}

  {$REGION 'Interfaced Methods'}
  public
    function GetGUIRecord: TViewNomenclatureWorkstationGUIRecord;

    procedure SetAction(const AAction: TAMDAction);

    function Can(const AAction: TAMDAction): Boolean;

    procedure Confirm;
    procedure Cancel;
  {$ENDREGION}

  {$REGION 'Constructors/Destructors'}
  public
    constructor Create;
    destructor Destroy; override;
  {$ENDREGION}
  end;

{ TViewModelNomenclatureWorkstations }

{$REGION 'Private Methods'}

procedure TViewModelNomenclatureWorkstation.ProcessNotification(const AModelNotification: IModelNotification);
begin
//
end;

procedure TViewModelNomenclatureWorkstation.SendNotification(const AInterfaceActions: TInterfaceActions);
var
  LModelNotification: IModelNotification;
begin
  if Assigned(FObservable) then begin
    LModelNotification := CreateNotificationClass;
    LModelNotification.Actions := AInterfaceActions;
    FObservable.NotifyObservers(LModelNotification);
  end;
end;

{$ENDREGION}


{$REGION 'Private Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Properties Getters/Setters'}

function TViewModelNomenclatureWorkstation.GetObserver: IObserver;
begin
  Result := FObserver;
end;

function TViewModelNomenclatureWorkstation.GetObservable: IObservable;
begin
  Result := FObservable;
end;

{$ENDREGION}


{$REGION 'Interfaced Methods'}

function TViewModelNomenclatureWorkstation.GetGUIRecord: TViewNomenclatureWorkstationGUIRecord;
begin
  case FAction of
    amdAttach: Result.Caption := 'ÒÚÐÃÎÂÑÊÈ ÎÁÅÊÒ - ÊÎÍÔÈÃÓÐÈÐÀÍÅ';
    amdModify: Result.Caption := 'ÒÚÐÃÎÂÑÊÈ ÎÁÅÊÒ - ÏÐÎÌßÍÀ';
    amdDetach: Result.Caption := 'ÒÚÐÃÎÂÑÊÈ ÎÁÅÊÒ - ÈÇÂÅÆÄÀÍÅ';
  end;
end;

procedure TViewModelNomenclatureWorkstation.SetAction(const AAction: TAMDAction);
begin
  FAction := AAction;
  case AAction of
    amdAttach: DataModuleWorkstations.FDMemTable.Append;
    amdModify: DataModuleWorkstations.FDMemTable.Edit;
    amdDetach: ;
  end;
end;

function TViewModelNomenclatureWorkstation.Can(const AAction: TAMDAction): Boolean;
begin
  case AAction of
    amdAttach: begin
      Result := True;
    end;
    amdModify: begin
      Result := False;
      if DataModuleWorkstations.FDMemTable.Active and (DataModuleWorkstations.FDMemTable.RecordCount > 0) then begin
        if DataModuleWorkstations.FDMemTableDetachedAt.AsString = '' then begin
          Result := True;
        end;
      end;
    end;
    amdDetach: begin
      Result := False;
      if DataModuleWorkstations.FDMemTable.Active and (DataModuleWorkstations.FDMemTable.RecordCount > 0) then begin
        if DataModuleWorkstations.FDMemTableDetachedAt.AsString = '' then begin
          Result := True;
        end;
      end;
    end;
  end;
end;

procedure TViewModelNomenclatureWorkstation.Confirm;
begin
  DataModuleWorkstations.FDMemTable.Edit;

  case FAction of
    amdAttach: begin
      DataModuleWorkstations.FDMemTableGID.AsString := TGeneratorGIDs.NewGIDByName('WorkstationGID').ToString;
      DataModuleWorkstations.FDMemTableAttachedAt.AsString := FormatDateTime('dd.mm.yyyy hh:nn:ss', Now);
      DataModuleWorkstations.FDMemTableModifiedAt.AsString := FormatDateTime('dd.mm.yyyy hh:nn:ss', Now);
    end;
    amdModify: begin
      DataModuleWorkstations.FDMemTableModifiedAt.AsString := FormatDateTime('dd.mm.yyyy hh:nn:ss', Now);
    end;
    amdDetach: begin
      DataModuleWorkstations.FDMemTableDetachedAt.AsString := FormatDateTime('dd.mm.yyyy hh:nn:ss', Now);
    end;
  end;

  DataModuleWorkstations.FDMemTable.Post;

  DataModuleWorkstations.SaveToFile;

  SendNotification([actCloseForm]);
end;

procedure TViewModelNomenclatureWorkstation.Cancel;
begin
  DataModuleWorkstations.FDMemTable.Cancel;

  SendNotification([actCloseForm]);
end;

{$ENDREGION}


{$REGION 'Constructors/Destructors'}

constructor TViewModelNomenclatureWorkstation.Create;
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

  FObservable := CreateObservableClass;
end;

destructor TViewModelNomenclatureWorkstation.Destroy;
begin
//
  inherited;
end;

{$ENDREGION}

function CreateViewModelNomenclatureWorkstation: IViewModelNomenclatureWorkstation;
begin
  Result := TViewModelNomenclatureWorkstation.Create;
end;

end.
