unit ViewModel.Nomenclature.FiscalDevices;

interface

uses
  Interfaces.ViewModel.Nomenclature.FiscalDevices;

  function CreateViewModelNomenclatureFiscalDevices: IViewModelNomenclatureFiscalDevices;

implementation

uses
  System.UITypes,
  System.SysUtils,
  Vcl.Dialogs,
  Vcl.ExtCtrls,
  Globals,
  Interfaces.Enums,
  Interfaces.GUIRecords,
  Interfaces.Model.Notification,
  Interfaces.Model.Pattern.Observer,
  Model.Pattern.Observer.Observable,
  Model.Pattern.Observer.Observer,
  Model.Notification,

  View.Nomenclature.FiscalDevice,
  DataModule.FiscalDevices;

type
  TViewModelNomenclatureFiscalDevices = class(TInterfacedObject, IViewModelNomenclatureFiscalDevices)

  {$REGION 'Private Methods'}
  private
    procedure ProcessNotification(const AModelNotification: IModelNotification);
    procedure SendNotification(const AInterfaceActions: TInterfaceActions);
  {$ENDREGION}

  {$REGION 'Private Fields'}
  private
    FObserver: IObserver;
    FObservable: IObservable;
  {$ENDREGION}

  {$REGION 'Private Properties Getters/Setters'}
  private

  {$ENDREGION}

  {$REGION 'Private Properties'}
  private

  {$ENDREGION}

  {$REGION 'Interfaced Properties Getters/Setters'}
  public
    function GetObserver: IObserver;
    function GetObservable: IObservable;
  {$ENDREGION}

  {$REGION 'Interfaced Properties'}
  public
    property Observer: IObserver read FObserver;
    property Observable: IObservable read GetObservable;
  {$ENDREGION}

  {$REGION 'Interfaced Methods'}
  public
    function GetGUIRecord(const AWidth: Integer): TViewNomenclatureFiscalDevicesGUIRecord;

    procedure Attach;
    procedure Modify;
    procedure Detach;

    procedure CloseForm;
  {$ENDREGION}

  {$REGION 'Constructors/Destructors'}
  public
    constructor Create;
    destructor Destroy; override;
  {$ENDREGION}
  end;

{ TViewModelNomenclatureFiscalDevices }

{$REGION 'Private Methods'}

procedure TViewModelNomenclatureFiscalDevices.ProcessNotification(const AModelNotification: IModelNotification);
begin
//
end;

procedure TViewModelNomenclatureFiscalDevices.SendNotification(const AInterfaceActions: TInterfaceActions);
var
  LModelNotification: IModelNotification;
begin
  if Assigned(FObservable) then begin
    LModelNotification := CreateNotificationClass;
    LModelNotification.Actions := AInterfaceActions;
    FObservable.NotifyObservers(LModelNotification);
  end;
end;

{$ENDREGION}


{$REGION 'Private Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Properties Getters/Setters'}

function TViewModelNomenclatureFiscalDevices.GetObserver: IObserver;
begin
  Result := FObserver;
end;

function TViewModelNomenclatureFiscalDevices.GetObservable: IObservable;
begin
  Result := FObservable;
end;

{$ENDREGION}


{$REGION 'Interfaced Methods'}

function TViewModelNomenclatureFiscalDevices.GetGUIRecord(const AWidth: Integer): TViewNomenclatureFiscalDevicesGUIRecord;
var
  LSpaces: Integer;
begin
  LSpaces := 3 + 1 + 1 + 8 * 1 + 16 + 1 + 1 + 3;
  Result.DBGridColumns0Width := (AWidth - LSpaces)*6 div 100;
  Result.DBGridColumns1Width := (AWidth - LSpaces)*21 div 100;
  Result.DBGridColumns2Width := (AWidth - LSpaces)*21 div 100;
  Result.DBGridColumns3Width := (AWidth - LSpaces)*21 div 100;
  Result.DBGridColumns4Width := (AWidth - LSpaces)*10 div 100;
  Result.DBGridColumns5Width := (AWidth - LSpaces)*10 div 100;
  Result.DBGridColumns6Width := (AWidth - LSpaces)*10 div 100;
end;

procedure TViewModelNomenclatureFiscalDevices.Attach;
begin
  ShowViewNomenclatureFiscalDevice(amdAttach);
  SendNotification([actUpdateGUI]);
end;

procedure TViewModelNomenclatureFiscalDevices.Modify;
begin
  ShowViewNomenclatureFiscalDevice(amdModify);
  SendNotification([actUpdateGUI]);
end;

procedure TViewModelNomenclatureFiscalDevices.Detach;
begin
  ShowViewNomenclatureFiscalDevice(amdDetach);
  SendNotification([actUpdateGUI]);
end;

procedure TViewModelNomenclatureFiscalDevices.CloseForm;
begin
  SendNotification([actCloseForm]);
end;

{$ENDREGION}


{$REGION 'Constructors/Destructors'}

constructor TViewModelNomenclatureFiscalDevices.Create;
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

  FObservable := CreateObservableClass;

  DataModuleFiscalDevices.LoadFromFile;
end;

destructor TViewModelNomenclatureFiscalDevices.Destroy;
begin
//
  inherited;
end;

{$ENDREGION}

function CreateViewModelNomenclatureFiscalDevices: IViewModelNomenclatureFiscalDevices;
begin
  Result := TViewModelNomenclatureFiscalDevices.Create;
end;

end.
