unit ViewModel.Nomenclature.Clients;

interface

uses
  Interfaces.ViewModel.Nomenclature.Clients;

  function CreateViewModelNomenclatureClients: IViewModelNomenclatureClients;

implementation

uses
  System.UITypes,
  System.SysUtils,
  Vcl.Dialogs,
  Vcl.ExtCtrls,
  Globals,
  Interfaces.Enums,
  Interfaces.GUIRecords,
  Interfaces.Model.Notification,
  Interfaces.Model.Pattern.Observer,
  Model.Pattern.Observer.Observable,
  Model.Pattern.Observer.Observer,
  Model.Notification,

  View.Nomenclature.Client,
  DataModule.Clients;

type
  TViewModelNomenclatureClients = class(TInterfacedObject, IViewModelNomenclatureClients)

  {$REGION 'Private Methods'}
  private
    procedure ProcessNotification(const AModelNotification: IModelNotification);
    procedure SendNotification(const AInterfaceActions: TInterfaceActions);
  {$ENDREGION}

  {$REGION 'Private Fields'}
  private
    FObserver: IObserver;
    FObservable: IObservable;
  {$ENDREGION}

  {$REGION 'Private Properties Getters/Setters'}
  private

  {$ENDREGION}

  {$REGION 'Private Properties'}
  private

  {$ENDREGION}

  {$REGION 'Interfaced Properties Getters/Setters'}
  public
    function GetObserver: IObserver;
    function GetObservable: IObservable;
  {$ENDREGION}

  {$REGION 'Interfaced Properties'}
  public
    property Observer: IObserver read FObserver;
    property Observable: IObservable read GetObservable;
  {$ENDREGION}

  {$REGION 'Interfaced Methods'}
  public
    function GetGUIRecord(const AWidth: Integer): TViewNomenclatureClientsGUIRecord;

    procedure Attach;
    procedure Modify;
    procedure Detach;

    procedure CloseForm;
  {$ENDREGION}

  {$REGION 'Constructors/Destructors'}
  public
    constructor Create;
    destructor Destroy; override;
  {$ENDREGION}
  end;

{ TViewModelNomenclatureClients }

{$REGION 'Private Methods'}

procedure TViewModelNomenclatureClients.ProcessNotification(const AModelNotification: IModelNotification);
begin
//
end;

procedure TViewModelNomenclatureClients.SendNotification(const AInterfaceActions: TInterfaceActions);
var
  LModelNotification: IModelNotification;
begin
  if Assigned(FObservable) then begin
    LModelNotification := CreateNotificationClass;
    LModelNotification.Actions := AInterfaceActions;
    FObservable.NotifyObservers(LModelNotification);
  end;
end;

{$ENDREGION}


{$REGION 'Private Properties Getters/Setters'}

{$ENDREGION}


{$REGION 'Interfaced Properties Getters/Setters'}

function TViewModelNomenclatureClients.GetObserver: IObserver;
begin
  Result := FObserver;
end;

function TViewModelNomenclatureClients.GetObservable: IObservable;
begin
  Result := FObservable;
end;

{$ENDREGION}


{$REGION 'Interfaced Methods'}

function TViewModelNomenclatureClients.GetGUIRecord(const AWidth: Integer): TViewNomenclatureClientsGUIRecord;
var
  LSpaces: Integer;
begin
  LSpaces := 3 + 1 + 12 * 1 + 18 + 1 + 3;

  Result.DBGridColumns0Width := (AWidth - LSpaces)*6 div 100;
  Result.DBGridColumns1Width := (AWidth - LSpaces)*13 div 100;
  Result.DBGridColumns2Width := (AWidth - LSpaces)*6 div 100;
  Result.DBGridColumns3Width := (AWidth - LSpaces)*9 div 100;
  Result.DBGridColumns4Width := (AWidth - LSpaces)*9 div 100;
  Result.DBGridColumns5Width := (AWidth - LSpaces)*9 div 100;
  Result.DBGridColumns6Width := (AWidth - LSpaces)*9 div 100;
  Result.DBGridColumns7Width := (AWidth - LSpaces)*9 div 100;
  Result.DBGridColumns8Width := (AWidth - LSpaces)*10 div 100;
  Result.DBGridColumns9Width := (AWidth - LSpaces)*10 div 100;
  Result.DBGridColumns10Width := (AWidth - LSpaces)*10 div 100;

  Result.DBGridColumns0Width :=
    Result.DBGridColumns0Width +
    AWidth -
    LSpaces -
    Result.DBGridColumns0Width -
    Result.DBGridColumns1Width -
    Result.DBGridColumns2Width -
    Result.DBGridColumns3Width -
    Result.DBGridColumns4Width -
    Result.DBGridColumns5Width -
    Result.DBGridColumns6Width -
    Result.DBGridColumns7Width -
    Result.DBGridColumns8Width -
    Result.DBGridColumns9Width -
    Result.DBGridColumns10Width;
end;

procedure TViewModelNomenclatureClients.Attach;
begin
  ShowViewNomenclatureClient(amdAttach);
  SendNotification([actUpdateGUI]);
end;

procedure TViewModelNomenclatureClients.Modify;
begin
  ShowViewNomenclatureClient(amdModify);
  SendNotification([actUpdateGUI]);
end;

procedure TViewModelNomenclatureClients.Detach;
begin
  ShowViewNomenclatureClient(amdDetach);
  SendNotification([actUpdateGUI]);
end;

procedure TViewModelNomenclatureClients.CloseForm;
begin
  SendNotification([actCloseForm]);
end;

{$ENDREGION}


{$REGION 'Constructors/Destructors'}

constructor TViewModelNomenclatureClients.Create;
begin
  FObserver := CreateObserverClass;
  FObserver.SetUpdateObserverMethod(ProcessNotification);

  FObservable := CreateObservableClass;

  DataModuleClients.LoadFromFile;
end;

destructor TViewModelNomenclatureClients.Destroy;
begin
//
  inherited;
end;

{$ENDREGION}

function CreateViewModelNomenclatureClients: IViewModelNomenclatureClients;
begin
  Result := TViewModelNomenclatureClients.Create;
end;

end.
