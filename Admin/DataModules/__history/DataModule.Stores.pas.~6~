unit DataModule.Stores;

interface

uses
  System.SysUtils,
  System.Classes,
  FireDAC.Stan.Intf,
  FireDAC.Stan.Option,
  FireDAC.Stan.Param,
  FireDAC.Stan.Error,
  FireDAC.DatS,
  FireDAC.Phys.Intf,
  FireDAC.DApt.Intf,
  FireDAC.Comp.DataSet,
  FireDAC.Comp.Client,
  FireDAC.Stan.StorageBin,
  Data.DB;

type
  TDataModuleStores = class(TDataModule)
    FDMemTable: TFDMemTable;
    FDMemTableGID: TStringField;
    FDMemTableName: TStringField;
    FDMemTableAttachedAt: TStringField;
    FDMemTableModifiedAt: TStringField;
    FDMemTableDetachedAt: TStringField;
    FDMemTableAddress: TStringField;
    DataSource: TDataSource;
  private
    { Private declarations }
  public
    function ActiveGID: String;
    { Public declarations }
  end;

var
  DataModuleStores: TDataModuleStores;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

{ TDataModuleStores }

function TDataModuleStores.ActiveGID: String;
begin
  Result := '-1';
  if FDMemTable.Active and (FDMemTable.RecordCount > 0) then begin
    Result := FDMemTableGID.AsString;
  end;
end;

end.
