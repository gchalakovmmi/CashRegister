    StoreID+', '+                   // FROMCONTRAGENTID
    ClientGID+', '+                 // TOCONTRAGENTID
    '1000'+', '''+                  // ITEMID
    ''+''', '''+                    // BARCODE
    '¬¿”◊≈–'+''', '''+              // DESCRIPTION
    'À≈¬¿'+''', '+                  // MEASURE
    '1, '+                          // COEFF
    VoucherPayment+', '+            // QUANTITY
    VoucherPayment+', '+            // TOTALQUANTITY
    '1'+', '+                       // PRICE
    '1'+', '+                       // VENDORPRICE
    VoucherPayment+', '+            // TOTAL
    '''*'', '+                      // ACT
    UserGID+', '+                   // USERID
    WorkstationID+', '''+           // MACHINEID
    ' '+'''';                       // TYPED

