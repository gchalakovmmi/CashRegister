    GID+', '''+                     // OPERATIONID
    SaleID+''', '''+                // OPNUMBER
    DateToStr(Date)+''', '''+       // ONDATE
    TimeToStr(TimeOf(Now))+''', '+  // ONTIME
    '2001, '+                       // OPGROUP
    '3099, '+                       // OPTYPE
    StoreID+', '+                   // FROMCONTRAGENTID
    ClientGID+', '+                 // TOCONTRAGENTID
    '1000'+', '''+                  // ITEMID
    ''+''', '''+                    // BARCODE
    'œ¿–» œŒ —Ã≈“ ¿'+''', '''+      // DESCRIPTION
    'À≈¬¿'+''', '+                  // MEASURE
    '1, '+                          // COEFF
