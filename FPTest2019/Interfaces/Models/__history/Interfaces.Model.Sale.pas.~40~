unit Interfaces.Model.Sale;

interface

uses
  Interfaces.Model.Pattern.Observer,
  Interfaces.Model.Classes.Sale,
  Interfaces.Model.Classes.Sale.Detail,
  Interfaces.Model.Classes.Sale.Cancellation;


type
  IModelSale = interface
  ['{00ACE134-ADFE-441D-8DC9-F2F69EDC79A4}']
    // Properties
    function GetObservable: IObservable;
    property Observable: IObservable read GetObservable;

    function GetSale: IModelClassSale;
    property Sale: IModelClassSale read GetSale;

    function GetSaleDetail: IModelClassSaleDetail;
    property SaleDetail: IModelClassSaleDetail read GetSaleDetail;

    function GetSaleCancellation: IModelClassSaleCancellation;
    property SaleCancellation: IModelClassSaleCancellation read GetSaleCancellation;

    // Setup/Teardown
    procedure SetupSale;
    procedure TeardownSale;

    // Sale Actions
    procedure OpenSale;
    procedure AddItem;
    procedure DuplicateItem;
    procedure RemoveItem;
    procedure CloseSale;
    procedure DiscardSale;

    // Sale's Payments Updates
    procedure UpdateSaleDue(const ADueDelta: String);
    procedure UpdateSaleCashPayment(const ACashPayment: String);
    procedure UpdateSaleVoucherPayment(const AVoucherPayment: String);
    procedure UpdateSaleCardPayment(const ACardPayment: String);
  end;

implementation

end.
